<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- generalization start -->
    <style name="Theme.Hazel.Base" parent="Theme.Prototype.Hazel.Base">
        <item name="android:statusBarColor">?colorPrimaryDark</item>
    </style>

    <style name="Theme.Hazel.White" parent="Theme.Hazel.Base.White">
        <item name="colorPrimary">@color/white</item>
        <item name="buttonStyle">@style/Widget.Hazel.ButtonStyle.Custom</item>
    </style>

    <style name="Theme.Hazel.Dark.Base" parent="Theme.Prototype.Hazel.Dark.Base">
        <item name="android:statusBarColor">?statusBarColor</item>
    </style>
    <!-- generalization end -->

    <style name="Theme.Hazel" parent="Theme.Hazel.Base">
        <item name="statusBarColor">?colorPrimaryDark</item>
    </style>

    <style name="Theme.Hazel.NoActionBar.StaticStatusBar" parent="Theme.Hazel.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="statusBarColor">?colorPrimaryDark</item>
    </style>

</resources>