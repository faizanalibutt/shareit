<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- generalization start -->
    <style name="Theme.Hazel" parent="Theme.Hazel.Base" />

    <style name="Theme.Hazel.NoActionBar" parent="Theme.Hazel.Base.NoActionBar" />

    <style name="Theme.Hazel.NoActionBar.StaticStatusBar" parent="Theme.Hazel.NoActionBar" />

    <style name="Theme.Hazel.Dark" parent="Theme.Hazel.Dark.Base" />

    <style name="Theme.Hazel.Dark.NoActionBar" parent="Theme.Hazel.Dark.Base.NoActionBar" />

    <style name="Theme.Hazel.Dark.NoActionBar.StaticStatusBar" parent="Theme.Hazel.Dark.NoActionBar" />

    <style name="Theme.Hazel.BarcodeScannerActivity" parent="Theme.Hazel.Dark.NoActionBar">
        <item name="statusBarColor">@color/dark_colorShadowEnd</item>
    </style>

    <style name="Theme.Hazel.White" parent="Theme.Hazel.Base.White">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="BalckPatch">
        <!--<item name="backgroundDialog">@drawable/background_dialog_black</item>
        <item name="backgroundPopupMenu">@drawable/background_popup_black</item>
        <item name="colorPrimary">@color/black_dominant</item>
        <item name="colorPrimaryDark">@color/black_dominant</item>
        <item name="colorPrimaryDark23">@color/black_dominant</item>
        <item name="colorSurface">@color/black_surface</item>
        <item name="android:windowBackground">@color/black_dominant</item>
        <item name="colorDivider">@color/black_surface</item>-->
    </style>

    <!-- generalization end -->

    <style name="Widget.Hazel.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!--<item name="android:windowBackground">?backgroundDialog</item>-->
        <item name="buttonBarButtonStyle">@style/Widget.Hazel.ButtonStyle.Dialog</item>
    </style>

    <style name="Widget.Hazel.PopupTheme" parent="ThemeOverlay.MaterialComponents">
        <!--<item name="android:background">?cardBackgroundColor</item>-->
        <!-- Later handle this -->
    </style>

    <style name="Widget.Hazel.FloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="Widget.Hazel.ButtonStyle.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/text_button_background_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/text_button_text_color_selector</item>
    </style>

    <style name="Widget.Hazel.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <!--<item name="android:background">?snackbarBackground</item>-->
    </style>

    <style name="Widget.Hazel.ButtonStyle.Dialog" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/text_button_ripple_color</item>
        <item name="android:textColor">@color/text_button_text_color_selector_blue</item>
    </style>

    <style name="Widget.Hazel.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/text_button_text_color_selector</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:background">@drawable/background_content_share_button</item>
        <item name="android:textColor">@color/button_text_color_selector</item>
        <!--<item name="android:textAllCaps">false</item>-->
    </style>

    <style name="Widget.Hazel.ButtonStyle.Permission" parent="Widget.Hazel.ButtonStyle">
        <item name="backgroundTint">@color/text_button_text_color_selector_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:background">@drawable/background_preparations_button</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Hazel.PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">?backgroundPopupMenu</item>
    </style>

    <style name="Widget.Hazel.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">?attr/selectionAccentColor</item>
        <item name="itemIconTint">?attr/selectionAccentColor</item>
        <item name="android:elevation" tools:targetApi="21">5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Widget.Hazel.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">?attr/selectionAccentColor</item>
        <!--<item name="itemTextColor">?attr/selectionAccentColor</item>-->
    </style>

    <style name="Widget.Hazel.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Widget.Hazel.CardView.Transfer" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Widget.Hazel.ProgressBar.Horizontal.Oval" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?roundProgressBar</item>
        <item name="android:background">?roundProgressBarShape</item>
    </style>

    <style name="Widget.Hazel.ProgressBar.Horizontal.Oval.Bald">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Hazel.ProgressBar.Linear" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?linearProgressBar</item>
        <item name="android:background">?linearProgressBarShape</item>
    </style>

    <style name="Widget.Hazel.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?colorSecondary</item>
        <item name="tabTextColor">@color/hazel_text_color</item>
    </style>

    <style name="TextAppearance">
        <item name="android:letterSpacing" tools:targetApi="21">0.011</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Primary" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/font_size_primary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Primary.Enlarge">
        <item name="android:textSize">@dimen/font_size_monster</item>
    </style>

    <style name="TextAppearance.Primary.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Primary.Big.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Normal">
        <item name="android:textSize">@dimen/font_size_primary_normal</item>
    </style>

    <style name="TextAppearance.Primary.Normal.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Primary.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextAppearance.Primary.Small.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Secondary">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/font_size_secondary</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Secondary.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Secondary.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="TextAppearance.Secondary.Big.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Secondary.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextAppearance.Secondary.Small.SingleLine">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="21">0.030</item>
    </style>

    <!--@drawable/ic_more_vert_white_24dp-->
    <style name="OverflowButton">
        <item name="srcCompat">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?roundSelector</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TextSeparatorMiddleDot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/mode_middleDot</item>
    </style>

    <style name="ListContentLayoutStyle">
        <item name="android:paddingLeft">@dimen/padding_list_content_parent_layout</item>
        <item name="android:paddingStart">@dimen/padding_list_content_parent_layout</item>
        <item name="android:paddingRight">@dimen/padding_list_content_parent_layout</item>
        <item name="android:paddingEnd">@dimen/padding_list_content_parent_layout</item>
        <item name="android:paddingTop">@dimen/padding_list_content_parent_layout</item>
        <item name="android:paddingBottom">@dimen/padding_list_content_parent_layout</item>
    </style>

    <style name="ListContentLayoutStyleOutside">
        <item name="android:layout_marginLeft">@dimen/margin_smaller_size</item>
        <item name="android:layout_marginStart">@dimen/margin_smaller_size</item>
        <item name="android:layout_marginRight">@dimen/margin_smaller_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_smaller_size</item>
        <item name="android:layout_marginTop">@dimen/margin_absolute_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_zero_size</item>
    </style>

    <style name="ListContentLayoutStyle.WithOverflowButton">
        <item name="android:paddingRight">@dimen/padding_list_content_narrow_parent_layout</item>
        <item name="android:paddingEnd">@dimen/padding_list_content_narrow_parent_layout</item>
    </style>

    <style name="ListContentLayoutStyle.Narrow">
        <item name="android:paddingTop">@dimen/padding_list_content_narrow_parent_layout</item>
        <item name="android:paddingBottom">@dimen/padding_list_content_narrow_parent_layout</item>
    </style>

    <style name="ListContentLayoutStyle.Narrow.WithOverflowButton">
        <item name="android:paddingRight">@dimen/padding_list_content_narrow_parent_layout</item>
        <item name="android:paddingEnd">@dimen/padding_list_content_narrow_parent_layout</item>
    </style>

    <style name="ListContentIconStyle">
        <item name="android:layout_width">@dimen/icon_size_list_normal</item>
        <item name="android:layout_height">@dimen/icon_size_list_normal</item>
        <item name="android:layout_marginLeft">@dimen/padding_list_content_icon_main_margin_left
        </item>
        <item name="android:layout_marginStart">@dimen/padding_list_content_icon_main_margin_left
        </item>
        <item name="android:layout_marginEnd">@dimen/padding_list_content_icon_main_margin_right
        </item>
        <item name="android:layout_marginRight">@dimen/padding_list_content_icon_main_margin_right
        </item>
    </style>

    <style name="ListContentIconStyleExtended">
        <item name="android:layout_width">@dimen/icon_size_list_normal_extend</item>
        <item name="android:layout_height">@dimen/icon_size_list_normal_extend</item>
    </style>

    <!--@drawable/ic_trebleshot_white_24dp_static-->
    <style name="CustomListFragmentEmptyImageStyle">
        <item name="android:background">?rippleBackground</item>
        <item name="android:cropToPadding">true</item>
        <item name="srcCompat">@null</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="CustomListFragmentEmptyTextStyle" parent="TextAppearance.Primary.Big">
        <item name="android:text">@string/text_listEmpty</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="CondensedTitleStyle">
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_common_text">
        <item name="android:text">@string/str_name</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_dominant</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Some comments reference this as Ubuntu Font Family. -->
    <!-- So, do not rename this using refactoring. Instead, find usages then change them. -->
    <style name="TextAppearance.Ubuntu" />

    <style name="DividerStyle">
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?backgroundGradientBottom</item>
    </style>

    <style name="DividerStyle.Raw">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?colorDivider</item>
    </style>

    <!--<string name="str_name">Name</string>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item> <!-- used for the back arrow on the action bar -->
    </style>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_dominant</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item> <!-- used for the back arrow on the action bar -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- used to change color of menu -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item> <!-- used for the back arrow on the action bar -->
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black_dominant</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- to change button color in appbar -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black_dominant</item>
    </style>

    <dimen name="icon_size_list_normal_extend">20dp</dimen>

</resources>
