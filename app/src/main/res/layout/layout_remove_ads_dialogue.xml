<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/remove_ads_dialogue_background">

    <ImageView
        android:id="@+id/iv_close_remove_ads"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="10dp"
        android:layout_marginTop="7.3dp"
        android:layout_marginEnd="6.7dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_cross_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45.3dp"
        android:text="@string/app_name"
        android:textColor="#0e0c0b"
        android:textSize="16.7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sub_titloe_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/remove_ads"
        android:textColor="#5f59f1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_pro" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.7dp"
        android:layout_marginTop="38.7dp"
        android:layout_marginEnd="12.7dp"
        android:background="@drawable/ic_shapes_pro"
        android:paddingBottom="14.4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_titloe_pro">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="152.7dp"
            android:layout_height="154.3dp"
            android:layout_marginTop="5.7dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/pro_dialog_animation" />

        <TextView
            android:id="@+id/desc_pro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="53dp"
            android:text="@string/text_remove_ads_desc"
            android:textAlignment="center"
            android:textColor="#6a7688"
            android:textSize="13.3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animation_view" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_remove"
            style="@style/Widget.Hazel.ButtonStyle.Custom"
            android:layout_width="0dp"
            android:layout_height="44.7dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/welcome_btn_bg"
            android:text="@string/text_btn_remove_now"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc_pro" />

        <TextView
            android:id="@+id/try_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="14dp"
            android:text="@string/i_ll_try_later"
            android:textAlignment="center"
            android:textColor="#202020"
            android:textSize="15.3sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_remove" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>