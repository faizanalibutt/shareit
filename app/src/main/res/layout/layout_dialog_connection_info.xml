<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_24"
    app:layout_constraintCircleRadius="@dimen/dp_5">

    <TextView
        android:id="@+id/dialog_sender_title"
        style="@style/TextAppearance.Primary.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:text="@string/layout_dialog_receiver_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_sender_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_Large_size"
        android:layout_marginTop="@dimen/margin_small_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sender_title"
        app:srcCompat="@drawable/image_mobile_large" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_sender_client"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/background_user_icon_default"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_sender_sender"
        app:layout_constraintEnd_toEndOf="@+id/dialog_sender_sender"
        app:layout_constraintStart_toStartOf="@+id/dialog_sender_sender"
        app:layout_constraintTop_toTopOf="@+id/dialog_sender_sender" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_sender_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small_size"
        android:layout_marginEnd="@dimen/margin_Large_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_sender_title"
        app:srcCompat="@drawable/image_mobile_large" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_sender_server"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:background="@drawable/background_user_icon_default"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_sender_receiver"
        app:layout_constraintEnd_toEndOf="@+id/dialog_sender_receiver"
        app:layout_constraintStart_toStartOf="@+id/dialog_sender_receiver"
        app:layout_constraintTop_toTopOf="@+id/dialog_sender_receiver" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_sender_server"
        app:layout_constraintEnd_toEndOf="@+id/dialog_sender_client"
        app:layout_constraintStart_toStartOf="@+id/dialog_sender_server"
        app:layout_constraintTop_toTopOf="@+id/dialog_sender_client"
        app:srcCompat="@drawable/ic_tick_icon_blue" />


</androidx.constraintlayout.widget.ConstraintLayout>