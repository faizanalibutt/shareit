        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_radish"
        android:padding="4dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"/>-->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_device"
        style="@style/TextAppearance.Primary.Enlarge"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/background_user_icon_default"
        android:layout_margin="4dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_device"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_name"
            style="@style/style_common_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="left"
            android:textColor="@color/black_dominant"/>
        <TextView
            android:id="@+id/tv_mac"
            style="@style/style_common_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/black_dominant"
            android:text="@string/str_mac"
            android:gravity="left"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/white"
        android:layout_below="@id/iv_device"
        android:layout_toRightOf="@id/iv_device"/>

</RelativeLayout>