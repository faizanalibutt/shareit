<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_blue"
        android:contentDescription="@string/item_text_app_icon" />

    <ImageView
        android:id="@+id/appTick"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/appIcon"
        app:layout_constraintTop_toBottomOf="@+id/appIcon"
        app:layout_constraintTop_toTopOf="@+id/appIcon"
        app:srcCompat="@drawable/ic_tick_icon_blue"
        android:contentDescription="@string/app_tick_text" />

    <TextView
        android:id="@+id/appName"
        style="@style/TextAppearance.Primary.Small.SingleLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_app_demo_text"
        android:gravity="center"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appIcon" />

    <TextView
        android:id="@+id/appSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_size_item_text"
        android:textSize="@dimen/font_size_tiny"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>