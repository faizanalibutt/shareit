    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PermissionsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/v0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_illustration_large" />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_size"
        android:background="@drawable/background_preparations_icon"
        android:padding="@dimen/margin_absolute_size"
        app:layout_constraintBottom_toBottomOf="@+id/bluetooth"
        app:layout_constraintEnd_toStartOf="@+id/bluetooth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluetooth"
        app:srcCompat="@drawable/ic_bluetooth_white_24dp" />

    <TextView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_smaller_size"
        android:layout_marginTop="@dimen/margin_small_size"
        android:text="Open Bluetooth"
        android:textColor="@color/black_dominant"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/i1"
        app:layout_constraintTop_toBottomOf="@+id/v0" />

    <ImageView
        android:id="@+id/bluetoothStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/margin_small_size"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bluetooth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluetooth"
        app:srcCompat="@drawable/checked" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bluetoothClick"
        android:layout_width="@dimen/preparation_button_width"
        android:layout_height="@dimen/preparation_button_height"
        android:layout_marginEnd="@dimen/margin_small_size"
        android:background="@drawable/background_preparations_button"
        android:onClick="openBluetooth"
        android:text="OPEN"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluetooth" />

    <TextView
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:layout_marginEnd="@dimen/margin_smaller_size"
        android:text="@string/bluetooth_desc"
        app:layout_constraintEnd_toStartOf="@+id/bluetoothStatus"
        app:layout_constraintStart_toStartOf="@+id/bluetooth"
        app:layout_constraintTop_toBottomOf="@+id/bluetooth" />

