<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_hotspot_status_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/qr_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Large_size"
        android:background="@color/colorShadowEnd"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/layout_hotspot_manager_qr_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <include
            layout="@layout/include_layout_hotspot_status_image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/layout_hotspot_manager_qr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:textColor="@color/black_dominant"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_container" />

    <LinearLayout
        android:id="@+id/userProfileImageRetry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_smaller_size"
        android:layout_marginEnd="@dimen/margin_smaller_size"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_absolute_size"
            android:gravity="center_vertical"
            android:text="@string/butn_scanQrCode" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/v3i"
            style="@style/TextAppearance.Primary.Enlarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/background_user_icon_default"
            android:gravity="center"
            android:padding="@dimen/margin_smallest_size"
            app:srcCompat="@drawable/ic_retry_white_24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
